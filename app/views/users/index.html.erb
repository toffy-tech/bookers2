
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "80x80"%>
      <table class="table">
        <tbody>
          <tr>
  	        <th>name</th>
  	        <th><%= @user.name %></th>
          </tr>
          <tr>
  	        <th>introduction</th>
  	        <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <p>
        <div class="row">
            <td><%=link_to "",edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog"  %></td>
        </div>
      </p>
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <label for="book_title">Title</label>
        <p><%= f.text_field :title, autofocus: true, id:"book_title", placeholder:"",class:"form-control book_title" %></p>
        <label for="book_opinion">Opinion</label>
        <p><%= f.text_area :body, autofocus: true, id:"book_opinion", placeholder:"", class:"form-control book_body" %></p>
        <%= f.submit "Create Book",class: "btn btn-success" %>
        
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
              <td><%= user.name %></td>
              <td><%=link_to "Show",user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
      