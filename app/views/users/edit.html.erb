<% if @user.errors.any? %>
  <div>
    <ul style="color: red">
      <h1>error</h1>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <p><%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"",class:"form-control" %></p>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <p><%= f.text_area :introduction, autofocus: true, id:"user_introduction", placeholder:"",class:"form-control" %></p>
        </div>
        <div class="form-group">
          <%= f.submit "Update User",class: "btn btn-secondary" %>
        </div>
      <% end %>
    </form>  
    </div>
  </div>
</div>