<% if @book.errors.any? %>
  <div>
    <ul style="color: red">
      <h1>error</h1>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Name</label>
          <p><%= f.text_field :title, autofocus: true, id:"book_title", placeholder:"",class:"form-control" %></p>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <p><%= f.text_area :body, autofocus: true, id:"book_opinion", placeholder:"",class:"form-control" %></p>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book",class: "btn btn-success" %>
        </div>
      <% end %>
      <%=link_to "Show",book_path(@book) %>
      |
      <%=link_to "Back",books_path %>
    </div>
  </div>
</div>